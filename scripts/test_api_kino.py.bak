import requests
from datetime import datetime, timedelta

today = datetime.now()
yesterday = today - timedelta(days=1)

url = f"https://api.opap.gr/draws/v3.0/1100/draw-date/{yesterday.date()}/{yesterday.date()}"

response = requests.get(url)

print("Status Code:", response.status_code)

try:
    data = response.json()
    print("Total draws found:", len(data.get("content", [])))
    print("Sample draw:")
    print(data.get("content", [])[0])
except Exception as e:
    print("❌ Error:", e)
